<div class="jumbotron jumbotron-fluid" id="jumbotron">
  <div class="container text-center">
    <h1 class="display-4">Burgers!</h1>
    <p class="lead"> Are your favorite burgers devoured yet? Keep track!</p>
  </div>
</div>

<div class="container">
<div class="row">
<div class="col-sm-6">
<div class="card bg-info text-white mb-3" style="max-width: 40rem;">
  <div class="card-body">
    <h4 class="card-title">Soon-To-Be-Eaten Burgers!</h4>
    <hr>
    <p class="card-text">  
    <ul class="fa-ul">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
      </ul>
    </p>
  </div>
</div>
</div>

<div class="col-sm-6">
<div class="card bg-info text-white mb-3" style="max-width: 40rem;">
  <div class="card-body">
    <h4 class="card-title">Devoured Burgers!</h4>
    <hr>
    <p class="card-text">  
    <ul class="fa-ul">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block}}
        {{/if}}
      {{/each}}
      </ul>
    </p>
  </div>
</div>
</div>
</div>
<div class="card bg-info text-white mb-3">
  <div class="card-body">
    <h4 class="card-title">Add a New Burger!</h4>
    <hr>
<form class="create-form">
  <div class="form-group card-text">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group card-text">
    <label for="devoured">Devoured Yet?</label><br>
    <input type="radio" name="devoured" value="1" checked> Of course!<br>
    <input type="radio" name="devoured" value="0"> Nope, not yet!
  </div>

  <button class="btn btn-warning" type="submit"><i class="fas fa-hamburger"></i>  Add Burger! </button>
</form>
  </div>
</div>

</div>